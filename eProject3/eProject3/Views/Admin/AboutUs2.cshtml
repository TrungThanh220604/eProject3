@model eProject3.Models.Entities.AboutUs

<link rel="stylesheet" href="~/css/AboutUs2.css">
<style>
    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        font-size: 16px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
<div class="mainHead">
    <div class="tilteLeft">
        <h1>OUR MISSION</h1>
        <p style="color: gray; padding-left: 5px;">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px;">Our Mission</span>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mainBody">
    <h1>Our mission</h1>
    <div class="content">
        <h5>@ViewBag.AboutUs[0].title</h5>
        <div class="content-2">
            <div class="content-text">
                <p>
                    @ViewBag.AboutUs[0].content
                </p>
            </div>

            <img src="~/imageAboutUs/@ViewBag.AboutUsImage[0].image" alt="">
        </div>
        <h5>My chalenger</h5>
        <div class="content-2">
            <img src="~/imageAboutUs/@ViewBag.AboutUsImage[1].image" alt="">
            <ul>
                @for (int i = 1; i < ViewBag.AboutUs.Count; i++)
                {
                    <li class="list-content-parent">@ViewBag.AboutUs[i].title</li>
                    <ul>
                        <li class="list-content-child" style="list-style: inside;">
                            @ViewBag.AboutUs[i].content;
                        </li>
                    </ul>
                }
            </ul>
        </div>
    </div>
    <!-- <div class="pagination">

    </div> -->
</div>
<div class="btn">
    <a asp-action="EditAboutUs" asp-route-id="@Model.id" asp-route-sourcePage="AboutUs2" class="actionBtn editBtn" style="text-decoration: none"><i class="fas fa-edit"></i>Edit</a>
</div>