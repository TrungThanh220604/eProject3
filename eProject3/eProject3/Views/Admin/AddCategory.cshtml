@using eProject3.Models.Entities
@model Cause

<link rel="stylesheet" href="~/css/AddCategory.css">

<div class="mainHead">
    <div class="tilteLeft">
        <h1>Add Category</h1>
        <p style="color: gray; padding-left: 5px">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px">Add Category</span>
    </div>
</div>
<div class="mainBody">
    <div class="form-add-cate">
        <form asp-controller="Admin" asp-action="AddCategory" method="post">
            <label asp-for="name">Category Name</label>
            <input asp-for="name" class="inputAddCate" type="text" placeholder="Category Name..." />
            <span asp-validation-for="name" style="color: red"></span>
            <input class="btnAddCate" type="submit" value="Add" />
            <a asp-action="Categories" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>