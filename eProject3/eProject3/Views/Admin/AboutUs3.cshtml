
<link rel="stylesheet" href="~/css/AboutUs3.css">
<style>
    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        font-size: 16px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
<div class="mainHead">
    <div class="tilteLeft">
        <h1>OUR TEAM</h1>
        <p style="color: gray; padding-left: 5px;">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px;">Our Team</span>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mainBody">
    <h1>Founding team</h1>
    <div class="teamMember">
        @for (int i = 0; i < ViewBag.AboutUs.Count - 1; i++)
        {
            <div class="teamMember-item">
                @if (ViewBag.AboutUsImage != null && i < ViewBag.AboutUsImage.Count && ViewBag.AboutUsImage[i] != null)
                {
                    <img src="~/imageAboutUs/@ViewBag.AboutUsImage[i].image" alt="">
                }
                <p>@ViewBag.AboutUs[i].content</p>
            </div>
        }
    </div>
    <h1>Legal advisor</h1>
    <div class="teamMember">
        <div class="teamMember-item">
            <img src="~/imageAboutUs/@ViewBag.AboutUsImage[ViewBag.AboutUs.Count-1].image" alt="">
            <p>@ViewBag.AboutUs[ViewBag.AboutUs.Count - 1].content</p>
        </div>
    </div>
</div>
<div class="btn">
    <a asp-action="EditAboutUs" asp-route-id="@Model.id" asp-route-sourcePage="AboutUs3" class="actionBtn editBtn" style="text-decoration: none"><i class="fas fa-edit"></i>Edit</a>
</div>