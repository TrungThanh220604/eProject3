@model eProject3.Models.Entities.AboutUs

<link rel="stylesheet" href="~/css/AboutUs4.css">
<style>
    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        font-size: 16px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
<div class="mainHead">
    <div class="tilteLeft">
        <h1>CAREER WITH US</h1>
        <p style="color: gray; padding-left: 5px;">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px;">Career With Us</span>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mainBody" style="margin-bottom: 30px">
    <h1>Career with us</h1>
    <div class="content">
        <ul>
            @foreach (var child in Model.AboutUsChilds)
            {
                <li class="list-content-parent">@child.title</li>
                <ul>
                    <li class="list-content-child" style="list-style: inside;">
                        @child.content
                    </li>
                </ul>
            }
            
        </ul>
        <p class="content-text" style="font-weight: bold; margin-top: 30px;">
            If you are passionate about volunteer work and want
            to build a better community, enter NGO.vn. We always welcome new talents, ready to join us in
            carrying out this noble mission.
        </p>
        <div style="display: flex; justify-content: center; position: relative;">
            <i class="bx bx-right-arrow-alt"></i>
            <button><a href="#" style="text-decoration: none">Join Us</a></button>
        </div>
    </div>
</div>
<div class="btn">
    <a asp-action="EditAboutUs" asp-route-id="@Model.id" asp-route-sourcePage="AboutUs4" class="actionBtn editBtn" style="text-decoration: none"><i class="fas fa-edit"></i>Edit</a>
</div>