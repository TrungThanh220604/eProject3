@model eProject3.Models.Entities.AboutUs

<link rel="stylesheet" href="~/css/AboutUs5.css">
<style>
    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        font-size: 16px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
<div class="mainHead">
    <div class="tilteLeft">
        <h1>OUR ACHIEVEMENTS</h1>
        <p style="color: gray; padding-left: 5px;">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px;">Our Achievements</span>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mainBody" style="margin-bottom: 30px">
    <h1>Our achievements</h1>
    <div class="content">
        <p class="content-text">
            At NGO.vn, we are proud of our achievements in our journey of supporting the
            community and bringing hope to people in difficult circumstances. The memorable milestones below are
            testament to our continuous efforts and the trust of the community.
        </p>
        <img src="~/imageAboutUs/@ViewBag.AboutUsImage[0].image"  style="width: 100%"/>
        <h5>Awards and Recognition</h5>
        <ul class="list-text">
            @foreach (var child in Model.AboutUsChilds)
            {
                <li class="list-content-parent">@child.title</li>
                <ul>
                    <li class="list-content-child" style="list-style: inside;">@child.content</li>

                </ul>
            }
            
            
        </ul>
    </div>
</div>
<div class="btn">
    <a asp-action="EditAboutUs" asp-route-id="@Model.id" asp-route-sourcePage="AboutUs5" class="actionBtn editBtn" style="text-decoration: none"><i class="fas fa-edit"></i>Edit</a>
</div>