@model eProject3.Models.Entities.AboutUs

<link rel="stylesheet" href="~/css/AboutUs6.css">
<style>
    .alert {
        padding: 15px;
        margin: 20px 0;
        border-radius: 5px;
        font-size: 16px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>
<div class="mainHead">
    <div class="tilteLeft">
        <h1>DASHBOARD</h1>
        <p style="color: gray; padding-left: 5px;">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px;">Dashboard</span>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="mainBody">
    <h1>Our supporters</h1>
    <div class="content">
        @if (ViewBag.FirstContent != null)
        {
            <p class="content-text">
                @ViewBag.FirstContent.content
            </p>
        }
        
        <h5>Charity organization</h5>
        <ul>
            @foreach (var item in Model.AboutUsImages)
            {
                <li>
                    <img src="~/imageAboutUs/@item.image" alt="Image" />
                </li>
            }
        </ul>
       
    </div>
</div>
<div class="btn">
    <a asp-action="EditAboutUs" asp-route-id="@Model.id" asp-route-sourcePage="AboutUs6" class="actionBtn editBtn"><i class="fas fa-edit"></i>Edit</a>
</div>