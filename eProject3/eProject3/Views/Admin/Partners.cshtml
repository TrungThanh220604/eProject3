@using eProject3.Models.Entities
@model List<Partner>

@{
    int index = 1;
}
<link rel="stylesheet" href="~/css//Partners.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

<div class="mainHead">
    <div class="tilteLeft">
        <h1>Partners</h1>
        <p style="color: gray; padding-left: 5px;">Version 2.0</p>
    </div>
    <div class="tilteRight">
        <span>Home ></span>
        <span style="padding-left: 4px;">Partners</span>
    </div>
</div>
<div class="mainContent">
    <div class="add">
        <a asp-action="AddPartners">Add</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="container">
        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Logo</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.name</td>
                        <td><img src="~/image/@item.logo" alt="Logo"></td>
                        <td class="description-cell">@item.description</td>
                        <td>
                            <button class="actionBtn editBtn"><i class="fas fa-edit"></i>Edit</button>
                            <form asp-action="DeletePartner" asp-route-id="@item.id" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <button class="actionBtn deleteBtn" type="submit"><i class="fas fa-trash-alt"></i>Delete</button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
               
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Logo</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "columnDefs": [
                { "width": "5%", "targets": 0 },
                { "width": "25%", "targets": 1 },
                { "width": "15%", "targets": 2 },
                { "width": "35%", "targets": 3 },
                { "width": "20%", "targets": 4 }
            ],
            "paging": true,
            "ordering": true,
            "info": true
        });
    });
</script>